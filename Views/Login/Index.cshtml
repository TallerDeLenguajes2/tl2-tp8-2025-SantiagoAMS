@using viewmodel
@model LoginViewModel
@{
    ViewData["Title"] = "Iniciar sesion";
}

<h1>Iniciar sesion</h1>

<form asp-action="Login" method="post">

    @if(Model!=null && Model.ErrorMessage!=null){
        <p class="text-danger"> @(Model.ErrorMessage)</p>
    }

    <article class="form-group">
        <label class="form-label" asp-for="Username">Usuario</label>
        <input class="form-control" asp-for="Username" type="text">
        <span asp-validation-for="Username" class="text-danger"></span>
    </article>

    <article class="form-group">
        <label class="form-label" asp-for="Pass">Contraseña</label>
        <input class="form-control" asp-for="Pass" type="password">
        <span asp-validation-for="Pass" class="text-danger"></span>
    </article>

    <button class="mt-3 btn btn-primary" type="submit">Iniciar sesión</button>

</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}