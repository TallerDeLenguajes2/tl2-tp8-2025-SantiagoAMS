@using models;
@model Presupuesto;

@if (Model == null){
    <h1 class="p-2 bg-danger text-center text-light">Error: Presupuesto no encontrado...</h1>    
    return;
}

<h1>Modificar Presupuesto N° @(Model.IdPresupuesto)</h1>

<form asp-controller="Presupuestos" asp-action="Edit" method="post">
    <input type="hidden" asp-for="IdPresupuesto" />
    <input type="hidden" asp-for="FechaCreacion" />

    <article class="p-2 w-50">
        <label for="NombreDestinatario">Nombre del destinatario</label>
        <input class="w-100" asp-for="NombreDestinatario" type="text"/>
    </article>

    <article>
        <p><strong>Fecha:</strong> @(Model.FechaCreacion.ToString("dd/MM/yyyy"))</p>
    </article>

    <table class="w-100 table table-striped">
        <thead class="text-center p-2 bg-success text-light">
            <th>Código</th>
            <th>Descripcion</th>
            <th>Cantidad</th>
            <th>Precio</th>
            <th>Subtotal</th>
            <th>Subtotal c/ IVA</th>
        </thead>
        <tbody>
            @foreach (var prod in Model.Detalle){
                <tr style="border: 1px solid black;">
                    <td class="text-center">@(prod.Producto.IdProducto)</td>
                    <td class="text-left">@(prod.Producto.Descripcion)</td>
                    <td class="text-center">@(prod.Cantidad)</td>
                    <td class="text-end">$@(prod.Producto.Precio)</td>
                    <td class="text-end">$@(prod.Subtotal())</td>
                    <td class="text-end">$@(prod.SubtotalConIva())</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="6" class="text-end bolder w-100"> 
                    <strong>$@(Model.MontoPresupuestoConIva())</strong>
                </td>
            </tr>
        </tfoot>
    </table>

    <article class="w-100 d-flex">
        <a class="m-2 btn btn-info" asp-controller="Presupuestos" asp-action="Index" >@("<") Cancelar</a>
        <a class="m-2 btn btn-danger" asp-controller="Presupuestos" asp-action="Delete" asp-route-id="@Model.IdPresupuesto">Eliminar</a>
        <button type="submit" class="m-2 btn btn-submit btn-success">Modificar</button>
    </article>
</form>
