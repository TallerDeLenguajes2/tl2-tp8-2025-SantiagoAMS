@using models;
@model Presupuesto;

@if (Model == null){
    <h1 class="p-2 bg-danger text-center text-light">Error: Presupuesto no encontrado...</h1>    
    return;
}

<h1>Eliminar Presupuesto</h1>

<p>¿Eliminar presupuesto N° @(Model.IdPresupuesto) del cliente "@(Model.NombreDestinatario)"?</p>

<section class="w-100 p-3 d-flex flex-evenly">
    <form class="w-25 m-2" asp-controller="Presupuestos" asp-action="Index" method="get">
        <button type="submit" class="btn btn-success w-100">No</button>
    </form>

    <form class="w-25 m-2" asp-controller="Presupuestos" asp-action="Delete" asp-route-id="IdPresupuesto" method="post">
        <input type="hidden" asp-for="IdPresupuesto" />
        <button type="submit" class="btn btn-danger w-100">Si, Eliminar</button>
    </form>
</section>
